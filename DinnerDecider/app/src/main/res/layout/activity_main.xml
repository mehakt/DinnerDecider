<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity" android:id="@+id/name" android:visibility="visible">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pakistani"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/foodselection" android:freezesText="false"
            app:layout_constraintVertical_bias="0.323" android:textSize="30sp" android:textStyle="bold"
            android:fontFamily="@font/muli_bold" app:layout_constraintHorizontal_bias="0.472"/>
    <Button
            android:text="Decide"
            android:layout_width="392dp"
            android:layout_height="wrap_content" android:id="@+id/decide" tools:layout_editor_absoluteY="468dp"
            tools:layout_editor_absoluteX="0dp" android:background="@color/colorPrimary" android:textSize="24sp"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="305dp" android:id="@+id/AddNewFood"
            android:textSize="24sp" android:fontFamily="@font/muli_bold"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.202" android:hint="add new food"/>
    <Button
            android:text="Add Food"
            android:layout_width="368dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="372dp"
            tools:layout_editor_absoluteX="8dp" android:id="@+id/AddFood" android:background="@color/colorPrimary"
            android:textSize="24sp" android:fontFamily="@font/muli_bold"/>


</android.suapp:layout_constraintLeft_toLeftOf="parent" pport.constraint.ConstraintLayout>